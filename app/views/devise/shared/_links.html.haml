- if controller_name != 'sessions'
  .relogin1
    = link_to "ログイン ※既に会員の方", new_session_path(resource_name), class: 'relogin'
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  .new_signin
    = link_to "新規登録の方はこちら", new_registration_path(resource_name), class: 'new_signin2'
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  .reset_password
    = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: 'reset_password2'
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "確認メールの再送信", new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "アカウント凍結解除メールの再送信", new_unlock_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)
    %br/
